<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="cn.iliker.mall.entity.IntegralAccount" table="integral_account">
        <id name="uid" type="java.lang.Integer">
            <generator class="foreign">
                <param name="property">userinfo</param>
            </generator>
        </id>
        <property name="phone" type="java.lang.String" length="32"/>
        <property name="amount" column="amount" type="java.lang.Integer" insert="false" update="true"/>
        <one-to-one name="userinfo" fetch="select" constrained="true"/>
    </class>
</hibernate-mapping>